<UserControl x:Class="ToolBox_Pro.Views.PreislsiteExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBox_Pro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel >
            <Button Content="Merkmale speichern" Style="{StaticResource FlatButtonStyle}"

                    Width="150"
                    Height="40"
                    Command="{Binding CsvSpeichernCommand}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            <Button Content="Bezeichnungen speichern" Style="{StaticResource FlatButtonStyle}"

            Width="150"
            Height="40"
            Command="{Binding CsvMerkmaleSpeichernCommand}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
            <Button Content="Preisliste speichern" Style="{StaticResource FlatButtonStyle}"

            Width="150"
            Height="40"
            Command="{Binding PreislistenExportierenCommand}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
