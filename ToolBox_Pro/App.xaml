<Application x:Class="ToolBox_Pro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToolBox_Pro" xmlns:local1="clr-namespace:ToolBox_Pro.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- BooleanToVisibilityConverter -->
            <local1:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local1:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <local1:AndMultiValueConverter x:Key="AndConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
